<div class="container">
    <div class="jumbotron header">
        <h1 class="display-4 jumboTitle">The 'Tendo Times</h1>
        <p class="lead">
            <i class="nes-icon coin is-small"></i>Your source for Nintendo News<i class="nes-icon coin is-small"></i>
        </p>
        <hr class="my-4">
        <div class="jumboText">
            <p>Here you can read, save, and comment on various Nintendo news articles.</p>
        </div>
        <a class="nes-btn is-success home" href="/">Home</a>
        <a class="nes-btn is-warning scrape" href="/">Scrape</a>
        <a class="nes-btn is-error saved" href="/saved">Saved</a>
    </div>
    <div class="nes-container is-rounded article-box">
        {{#each articles}}
        <div data-_id="{{this._id}}" class="card">
            <div class="card-header">
                <h3>
                <a class="article-link cardHead" target="_blank" href="{{this.url}}">{{this.title}}</a>
                <a class="nes-btn is-error save">Save Article</a>
                </h3>
            </div>
            <div class="card-body">{{this.desc}}
              <div class="articleImage">
                <img class="articleImage" src="{{this.image}}" />
              </div>
            </div>
        </div>
  {{/each}}
    </div>
</div>

<script src="js/index.js"></script>